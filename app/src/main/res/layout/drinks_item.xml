<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4CA59C">


    <ImageView
        android:id="@+id/img_name"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:fontFamily="serif"
        android:textSize="16dp"
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtdri"
        android:layout_marginTop="10dp"
        android:layout_marginStart="220dp"
        app:layout_constraintTop_toBottomOf="@id/img_name"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:id="@+id/txtdri"
        android:fontFamily="serif"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txt_name"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/img_name"
        android:layout_height="wrap_content"
        android:text="Drink Name :----" />

    <TextView
        android:fontFamily="serif"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:id="@+id/txt_id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:fontFamily="serif"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txt_id_name"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:text="Drink Id :-" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txt_id_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>